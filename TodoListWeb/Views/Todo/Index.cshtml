
@model IEnumerable<Todo>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Todo List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Todo" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create Todo</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Deadline
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Deadline
                </td>
                <td>
                    <div class="w-75 btn-group text-center" role="group">
                        <a asp-controller="Todo" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary p-1 mx-1"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                        <a asp-controller="Todo" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger p-1 mx-1"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>