@model Todo

<form method="post"> @*Will return to the Edit with POST since we did not specify an asp-action*@
    <div class="p-4 mt-4 bg-dark">
        <h2 class="text-light">Edit todo</h2>
        <hr />
        <fieldset>
            <div class="form-group">
             
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter a name" class="input-group-text pt-4" style="background-color:lightgrey">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a description" style="background-color:lightgrey"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="datetime-local" asp-for="Deadline" class="form-control" style="background-color:lightgrey;" >
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary me-3" style="width:150px">Update</button>
            <a class="btn btn-secondary" style="width:150px" asp-controller="Todo" asp-action="Index">Back</a>
        </fieldset>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}